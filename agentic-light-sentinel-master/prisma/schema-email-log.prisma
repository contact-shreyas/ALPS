// Add this to your prisma/schema.prisma file

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  status    String   // 'sent' | 'failed' | 'pending'
  transport String   // 'smtp' | 'json' | 'json-fallback'
  messageId String?
  error     String?
  sentAt    DateTime
  createdAt DateTime @default(now())
  
  @@index([to])
  @@index([status])
  @@index([sentAt])
  @@index([createdAt])
}