// Add these models to the existing schema.prisma file

model AgentLog {
  id        String   @id @default(cuid())
  component String   // 'sense' | 'reason' | 'act' | 'learn'
  status    String   // 'success' | 'error'
  error     String?
  timestamp DateTime @default(now())
  @@index([component])
  @@index([timestamp])
}

model Hotspot {
  id           String    @id @default(cuid())
  districtCode String
  district     District  @relation(fields: [districtCode], references: [code], onDelete: Cascade)
  brightness   Float
  delta        Float
  severity     String    // 'low' | 'medium' | 'high' | 'extreme'
  notified     Boolean   @default(false)
  detectedAt   DateTime  @default(now())
  resolvedAt   DateTime?
  @@index([districtCode])
  @@index([severity])
  @@index([detectedAt])
}